
 <%include ./admin_index%>


<div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

          <h1 class="my-4">News
            
          </h1>
<%for(var i=0;i<post.length;i++){%>
          <div class="card mb-4">
            <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title"><%=post[i].heading%></h2>
              <p class="card-text"><%=post[i].short_desc%></p>
              <a href="/news/<%=post[i]._id%>" class="btn btn-primary">Read More &rarr;</a>
              <a href="#" class="btn btn-primary">Update &rarr;</a>
              <a href="#" class="btn btn-primary">Delete &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posted on January 1, 2017 by
              <a href="#">Start Bootstrap</a>
            </div>
          </div>
          <%}%>
</div>
</div>
</div>
 <%include ./footer%>